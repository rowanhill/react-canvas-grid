{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": [ // cypress includes types with global definitions which conflict with jest, so we limit to jest here
      "jest"  
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "cypress",
    "**/*.test.tsx",
    "**/*.test.ts",
  ]
}
